<form method="post"
	class="flex items-center justify-center"
	action="{{ path('app_medicamentos_delete', { id: medicamento.id }) }}"
	onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medicamento.id) }}" />
	<button class="btn btn-error"><i class="fa-solid fa-trash"></i></button>
</form>
